{
    "manifest_version": 3,
    "name": "Invoice Validator for Coupa",
    "version": "1.0",
    "description": "Checks if the uploaded PDF invoice matches the entered invoice number in Coupa.",
    "permissions": ["scripting", "activeTab", "storage"],
    "host_permissions": ["https://*.coupa.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["https://*.coupa.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  